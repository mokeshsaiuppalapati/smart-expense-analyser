<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.expense.ui.BudgetManagerController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-background-radius: 5;">
        <children>
            <VBox alignment="CENTER">
                <children>
                    <Label text="Total Budget" />
                    <Label fx:id="lblTotalBudget" style="-fx-font-weight: bold; -fx-font-size: 16;" text="₹0.00">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </children>
            </VBox>
            <VBox alignment="CENTER">
                <children>
                    <Label text="Total Spent (This Month)" />
                    <Label fx:id="lblTotalSpent" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: orange;" text="₹0.00">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </children>
            </VBox>
            <VBox alignment="CENTER">
                <children>
                    <Label text="Total Remaining" />
                    <Label fx:id="lblTotalRemaining" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: green;" text="₹0.00">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </children>
            </VBox>
        </children>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="8.0">
        <children>
            <Label text="Category:" />
            <TextField fx:id="categoryField" promptText="e.g., Food" />
            <Label text="Limit:" />
            <TextField fx:id="limitField" promptText="monthly limit" />
            <Button fx:id="btnAdd" onAction="#onAddBudget" text="Add / Save Selected" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onSuggestBudgets" style="-fx-background-color: #cce5ff;" text="Suggest Budgets" />
        </children>
    </HBox>
    <TableView fx:id="budgetTable" editable="true" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="categoryCol" editable="false" prefWidth="160.0" text="Category" />
            <TableColumn fx:id="limitCol" prefWidth="120.0" text="Monthly Limit" />
            <TableColumn fx:id="spentCol" editable="false" prefWidth="140.0" text="Spent (this month)" />
            <TableColumn fx:id="remainingCol" editable="false" prefWidth="120.0" text="Remaining" />
            <TableColumn fx:id="progressCol" editable="false" prefWidth="140.0" text="Progress" />
            <TableColumn fx:id="actionsCol" editable="false" prefWidth="100.0" text="Actions" />
        </columns>
    </TableView>
</VBox>