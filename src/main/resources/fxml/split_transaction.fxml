<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="450.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.expense.ui.SplitTransactionController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label styleClass="h1" text="Smart Split" />
    <HBox alignment="BASELINE_LEFT" spacing="5.0">
        <Label text="Splitting a total of:" />
        <Label fx:id="totalAmountLabel" style="-fx-font-weight: bold;" text="₹0.00" />
    </HBox>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
        <VBox fx:id="splitBox" spacing="10.0" />
    </ScrollPane>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Label text="Unallocated:" />
        <Label fx:id="remainingAmountLabel" style="-fx-font-weight: bold;" text="₹0.00" />
        <Button onAction="#onCancel" text="Cancel" />
        <Button fx:id="saveButton" onAction="#onSaveSplit" styleClass="button" text="Save Split" />
    </HBox>
</VBox>